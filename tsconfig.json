{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*", "types/**/*"]
}
